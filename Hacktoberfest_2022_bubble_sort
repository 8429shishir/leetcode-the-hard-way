#include<iostream>
using namespace std;
void swap(int *a,int *b)
{
   int temp=*a;
   *a=*b;
   *b=temp;
}   
void bubblesort(int *a,int n)
{
  for(int i=0;i<n-1;i++)
  {  
     int f=0;
    for(int j=0;j<n-1;j++)
    {
       if(a[j]>a[j+1])
       {
         swap(&a[j],&a[j+1]);
         f=1;
       }
    }
    if(f==0)
    break;
  }
}
int main()
{
   int a[10]={2,4,6,7,1,3,5,8,9,10};
   int n=sizeof(a)/sizeof(int);
   bubblesort(a,n);
   
   for(int x:a)
   {
      cout<<x<<" ";
   }
   return 0;
}  
 
